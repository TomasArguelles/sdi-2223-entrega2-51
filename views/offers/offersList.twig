{% extends "layout.twig" %}
{% block title %} My Wallapop {% endblock %}
{% block main_container %}
    <!-- W9 Usuario registrado: Buscar ofertas -->
    <div class="row">
        <div id="custom-search-input ">
            <form method="get" action="/offers/all">
                <div class="input-group col-xs-8 col-sm-6 col-md-4 col-lg-5 pull-right">
                    <label for="search">Realizar búsqueda:</label>
                    <input id="search" type="text"
                           class="search-query form-control"
                           placeholder="Título de la oferta"
                           name="search"/>
                    <span class="input-group-btn">
                        <button class="btn" type="submit">
                            <span class="glyphicon glyphicon-search"></span>
                        </button>
                    </span>
                </div>
            </form>
        </div>
    </div>
    <h2>Ofertas</h2>
    <div class="row">
        {% if offers.length > 0 %}
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>Título</th>
                    <th>Detalle de la oferta</th>
                    <th>Fecha de publicación</th>
                    <th>Precio</th>
                    <th></th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                {% for offer in offers %}
                    <tr>
                        <td>{{ offer.title }}</td>
                        <td>{{ offer.description }}</td>
                        <td>{{ offer.date }}</td>
                        <td>{{ offer.price }}</td>
                        <td>
                            <a href="/offer/{{ offer._id }}/delete"
                               class="btn btn-danger">Eliminar</a>
                        </td>
                        <td>
                            {% if offer.buy %}
                                <p>Vendida</p>
                            {% else %}
                                <a href="/offers/buy/{{ offer._id }}"
                                   class="btn btn-primary">Comprar</a>
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        {% else %}
            <p>No hay ofertas</p>
        {% endif %}
        {% if buyError %}
            <span id="errorPrecio" class="text-danger">
                ¡Tu dinero debe ser superior al precio de la oferta para poder comprarla!</span>
        {% endif %}
    </div>

    <!-- Paginación mostrar la actual y 2 anteriores y dos siguientes -->
    <div class="row text-center">
        <ul class="pagination">
            {% for page in pages %}
                <li class="page-item" id="pi-{{ page }}">
                    <a class="page-link"
                       href="/offers/all/?page={{ page }}">{{ page }}</a>
                </li>
            {% endfor %}
            <script>
                $("#pi-" + "{{ currentPage }}").addClass("active");
            </script>
        </ul>
    </div>
{% endblock %}