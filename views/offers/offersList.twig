{% extends "layout.twig" %}
{% block title %} My Wallapoop {% endblock %}
{% block main_container %}
    <!-- W9 Usuario registrado: Buscar ofertas -->
    <div class="row">
        <div id="custom-search-input ">
            <form method="get" action="/offers/all">
                <div class="input-group col-xs-8 col-sm-6 col-md-4 col-lg-5 pull-right">
                    <input id="search" type="text" class="search-query form-control" placeholder="Título de la oferta"
                           name="search"/>
                    <span class="input-group-btn">
                        <button class="btn" type="submit">
                            <span class="glyphicon glyphicon-search"></span>
                        </button>
                    </span>
                </div>
            </form>
        </div>
    </div>
    <h2>Ofertas</h2>
    <div class="row">
        {% for offer in offers %}
            <div class="col-xs-6 col-sm-6 col-md-4 col-lg-3">
                <div style="width:200px">
                    <a href="/offers/{{ offer._id }}">
                        <div>{{ offer.title }}</div>
                        <div class="small">{{ offer.description }}</div>
                        <div class="small">{{ offer.dateUpload }}</div>
                        <div class="text-right">{{ offer.price }} €</div>
                        {% if buy %}
                            <a class="btn btn-primary pull-right"
                               href="/offers/buy/{{ offer._id }}">Comprar</a>
                        {% else %}
                            <div>Vendida</div>
                        {% endif %}
                    </a>
                </div>
            </div>
        {% endfor %}
    </div>
    <!-- Paginación mostrar la actual y 2 anteriores y dos siguientes -->
    <div class="row text-center">
        <ul class="pagination">
            {% for page in pages %}
                <li class="page-item" id="pi-{{ page }}">
                    <a class="page-link" href="/offers/all/?page={{ page }}">{{ page }}</a>
                </li>
            {% endfor %}
            <script>
                $("#pi-" + "{{ currentPage }}").addClass("active");
            </script>
        </ul>
    </div>
{% endblock %}